        android:text="少年的你"
        android:textColor="#333333"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <!-- 评分 -->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8.1"
            android:textSize="11sp"
            android:textColor="#333333"/>
        
