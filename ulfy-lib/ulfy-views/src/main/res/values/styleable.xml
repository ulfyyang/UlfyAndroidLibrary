<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- 自动滚动新闻 -->
    <declare-styleable name="AutoScrollUpLayout">
        <!-- 滚动方向：上、下 -->
        <attr name="scroll_direction" format="enum">
            <enum name="up" value="0" />
            <enum name="down" value="1" />
        </attr>
        <!-- 滚动模式：跳跃、连续 -->
        <attr name="scroll_mode" format="enum">
            <enum name="jump" value="0" />
            <enum name="smooth" value="1" />
        </attr>
        <!-- 跳跃模式：每次的滚动距离 -->
        <attr name="scroll_distance" format="enum|dimension">
            <!-- 自动匹配父容器 -->
            <enum name="auto" value="0" />
        </attr>
        <!-- 跳跃模式：滚动动画需要的时间 -->
        <attr name="scroll_time" format="integer" />
        <!-- 跳跃模式：滚动之间的时间间隔 -->
        <attr name="scroll_delay" format="integer" />
        <!-- 滚动模式：平滑滚动的速度-->
        <attr name="scroll_speed" format="integer" />
    </declare-styleable>

    <!-- 虚线 -->
    <declare-styleable name="dashLine">
        <!-- 线的宽度 -->
        <attr name="dashWidth" format="dimension" />
        <!-- 线之间的间距，如果有多重颜色则表示的是每种颜色线之间的间距，目前支持透明和具体色两种，因此可以忽略该属性 -->
        <attr name="dashGap" format="dimension" />
        <!-- 虚线的颜色 -->
        <attr name="dashColor" format="color" />
        <!-- 虚线的方向 -->
        <attr name="orientation" format="enum">
            <enum name="vertical" value="1" />
            <enum name="horizontal" value="0" />
        </attr>
    </declare-styleable>

    <declare-styleable name="DialogLayout">
        <!-- 动画方向 -->
        <attr name="direction" format="enum">
            <enum name="left" value="0" />
            <enum name="top" value="1" />
            <enum name="right" value="2" />
            <enum name="bottom" value="3" />
        </attr>
    </declare-styleable>

    <!-- 跟随手指移动 -->
    <declare-styleable name="FingerFollowLayout">
        <!-- 跟随模式 -->
        <attr name="action_mode" format="enum">
            <!-- 自动贴边 -->
            <enum name="auto_attach_side" value="0" />
            <!-- 不自动贴边 -->
            <enum name="position_fixed" value="1" />
        </attr>
    </declare-styleable>

    <!-- 流式布局 -->
    <declare-styleable name="FlowLayout">
        <!-- 设置子View之间的间距 -->
        <attr name="child_margin" format="dimension" />
    </declare-styleable>

    <!-- 非复用GridView -->
    <declare-styleable name="GridViewLayout">
        <!-- 指定每行的列数 -->
        <attr name="layoutColumnCount" format="integer" />
        <!-- 指定分隔条 -->
        <attr name="layoutDivider" />
        <!-- 指定分隔条的高度 -->
        <attr name="layoutDividerHeight" />
    </declare-styleable>

    <!-- 非复用ListView -->
    <declare-styleable name="ListViewLayout">
        <!-- 指定分割线 -->
        <attr name="layoutDivider" />
        <!-- 指定分割线高度 -->
        <attr name="layoutDividerHeight" />
        <!-- 指定是否平局分配Cell的可用空间，采用gravity实现 -->
        <attr name="layoutAverage" format="boolean" />
        <!-- 指定占位的数量，设置该属性会自动设置为均分 -->
        <attr name="layoutPlaceHolderCount" format="integer" />
        <!-- 设置为自动缩放，当Cell的空间不足时会自动设置gravity为均分 -->
        <attr name="layoutAutoScale" format="boolean" />
    </declare-styleable>

    <!-- 形状布局 -->
    <declare-styleable name="ShapeLayout">
        <!-- 指定形状：矩形可指定四周的圆角 -->
        <attr name="layout_shape" format="enum">
            <!-- 圆形 -->
            <enum name="circle" value="1" />
            <!-- 矩形 -->
            <enum name="rect" value="2" />
        </attr>
        <!-- 统一指定矩形圆角 -->
        <attr name="rect_radius" format="dimension" />
        <!-- 左上角圆角 -->
        <attr name="rect_radius_left_top" format="dimension" />
        <!-- 右上角圆角 -->
        <attr name="rect_radius_right_top" format="dimension" />
        <!-- 右下角圆角 -->
        <attr name="rect_radius_right_bottom" format="dimension" />
        <!-- 左下角圆角 -->
        <attr name="rect_radius_left_bottom" format="dimension" />
        <!-- 制定shape的背景 -->
        <attr name="shape_background" format="color|reference" />
    </declare-styleable>

    <!-- 比例布局 -->
    <declare-styleable name="RatioLayout">
        <!-- 指定宽度比例数 -->
        <attr name="ratio_width" format="integer" />
        <!-- 指定高度比例数 -->
        <attr name="ratio_height" format="integer" />
        <!-- 是否自动缩放子控件，强制设置子控件填充父控件以限制其大小 -->
        <attr name="auto_scale_child" format="boolean" />
    </declare-styleable>

</resources>