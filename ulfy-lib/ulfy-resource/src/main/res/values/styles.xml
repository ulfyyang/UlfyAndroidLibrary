<resources>

    <!-- 系统默认样式 -->
    <style name="UlfyTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 定制字体 -->
        <item name="android:textColor">@color/text</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <!-- 定制其它组件 -->
        <item name="android:overScrollMode">never</item>
        <item name="android:divider">@color/line</item>
        <item name="android:dividerHeight">@dimen/line_height</item>
        <item name="android:listSelector">@android:color/transparent</item>
    </style>

    <!-- 由于EditText的背景无法全局生效，因此需要在每个EditText上单独设置 -->
    <style name="EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>

    <!-- 横向样式 -->
    <style name="HLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/line_height</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- 竖线样式 -->
    <style name="VLine">
        <item name="android:layout_width">@dimen/line_height</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/line</item>
    </style>

    <!-- 分割条 -->
    <style name="HDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_height</item>
        <item name="android:background">@color/divider</item>
    </style>

</resources>
